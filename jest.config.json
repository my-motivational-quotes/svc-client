{
  "testEnvironment": "jsdom",
  "coverageThreshold": {
    "global": {
      "lines": 85
    }
  },
  "collectCoverage": true,
  "collectCoverageFrom": ["src/components/**/*.js"],
  "coverageDirectory": "coverage",

  "transform": {
    "^.+\\.(js|jsx|ts|tsx)$": ["babel-jest", { "presets": ["next/babel"] }]
  },
  "transformIgnorePatterns": [
    "/node_modules/",
    "^.+\\.module\\.(css|sass|scss)$"
  ]
}
